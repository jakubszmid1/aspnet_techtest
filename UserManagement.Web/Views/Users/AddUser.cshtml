@model UserManagement.Web.Models.Users.UserListItemViewModel

<h2>Add New User</h2>

<form method="post" action="@Url.Action("AddUser", "Users")">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Forename</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Account Active</th>
                    <th style="width: 1px;"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div><input type="text" asp-for="Forename" /></div>
                        <div><span asp-validation-for="Forename" class="text-danger"></span></div>
                    </td>
                    <td>
                        <div><input type="text" asp-for="Surname" /></div>
                        <div><span asp-validation-for="Surname" class="text-danger"></span></div>
                    </td>
                    <td>
                        <div><input type="email" asp-for="Email" /></div>
                        <div><span asp-validation-for="Email" class="text-danger"></span></div>
                    </td>
                    <td>
                        <div><input type="date" asp-for="DateOfBirth" /></div>
                        <div><span asp-validation-for="DateOfBirth" class="text-danger"></span></div>
                    </td>
                    <td>
                        <div><input type="checkbox" asp-for="IsActive!" /></div>
                        <div><span asp-validation-for="IsActive" class="text-danger"></span></div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="btn-group" role="group">
            <a asp-controller="Users" asp-action="List" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-primary float-end">Submit</button>
        </div>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


